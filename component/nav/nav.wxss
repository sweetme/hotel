.nav {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    border-top: 1rpx solid #efeff7;
    align-items: center;
}

.nav-item {
    text-align: center;
    flex: 1;
    font-size: 20rpx;
    color: #313131;
}

.nav-item image {
    height: 42rpx;
    margin-bottom: 5rpx;
}

.index-icon {
    width: 42rpx;
}

.hotel-icon {
    width: 40rpx;
}

.food-icon {
    width: 54rpx;
}

.good-icon {
    width: 34rpx;
}

.personal-icon {
    width: 37rpx;
}


.nav-item-current {
    color: #4499ff;
}